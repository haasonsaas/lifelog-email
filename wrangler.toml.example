name = "day-after-worker-resend"
main = "src/index.ts"
compatibility_date = "2025-04-27"

[triggers]
crons = ["0 16 * * *"]  # 09:00 America/Los_Angeles

[vars]
TIMEZONE   = "America/Los_Angeles"
EXTRACTOR  = "conversation_topics"   # decisions | new_contacts | filler_score | action_items | gpt_summary | conversation_topics
FROM_EMAIL = "your-from-email@example.com"
TO_EMAIL   = "your-to-email@example.com"

[[kv_namespaces]]
binding = "TOKEN_KV"
id = "your-kv-namespace-id"
preview_id = "your-preview-kv-namespace-id"

[env.dev]
name = "day-after-worker-resend-dev"
vars = { TIMEZONE = "America/Los_Angeles", EXTRACTOR = "conversation_topics", FROM_EMAIL = "your-from-email@example.com", TO_EMAIL = "your-to-email@example.com" }

[[env.dev.kv_namespaces]]
binding = "TOKEN_KV"
id = "your-kv-namespace-id"
preview_id = "your-preview-kv-namespace-id"

[env.production]
workers_dev = true
route = { pattern = "your-domain.com", zone_id = "your-zone-id" }

[env.staging]
workers_dev = true
route = { pattern = "staging.your-domain.com", zone_id = "your-zone-id" } 